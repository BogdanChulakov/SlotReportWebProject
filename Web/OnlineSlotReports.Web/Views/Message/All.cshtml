@model OnlineSlotReports.Web.ViewModels.MessageViewModels.AllMessageViewModel
@{
    ViewData["Title"] = "All";
}

<h1 class="display-4" align="center">Mail</h1>

<p class="alert-dismissible">New messages</p>
@foreach (var message in Model.NewMessages)
{
    <div class="card alert-primary m-2">
        <div class="card-header">
            @message.Sender - @message.Date
        </div>
        <div class="card-body">
            <p class="card-text">@message.ShortContent</p>
            <a asp-controller="Message" asp-action="Index" asp-route-id="@message.Id" class="btn btn-primary">Open</a>
        </div>
    </div>
}
<hr />
<p>Read messages</p>
@foreach (var message in Model.ReadMessages)
{
    <div class="card alert-secondary m-2">
        <div class="card-header">
            @message.Sender - @message.Date
        </div>
        <div class="card-body">
            <p class="card-text">@message.ShortContent</p>
            <a asp-controller="Message" asp-action="Index" asp-route-id="@message.Id" class="btn btn-primary float-left">Open</a>
            <a asp-controller="Message" asp-action="Delete" asp-route-id="@message.Id" class="btn btn-danger float-right" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
        </div>
    </div>
}
