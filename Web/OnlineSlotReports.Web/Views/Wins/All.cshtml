@model OnlineSlotReports.Web.ViewModels.WinsViewModels.AllWinsViewModel
@{
    ViewData["Title"] = "AllWins";
}

<h1 align="center" class="display-4">All Wins</h1>
<p>
    <a asp-controller="Wins" asp-action="Add" asp-route-id="@Model.GamingHallId" class="btn btn-primary">Add Wins!</a>
</p>
@if (this.TempData["Message"] != null)
{
    <div class="alert alert-success">
        @this.TempData["Message"]
    </div>
}
<div class="row">
    @foreach (var win in Model.Wins)
    {
        <div class="col-md-4 card" style="width: 18rem;">
            <img class="card-img-top" src="@win.Url" alt="Card image cap" height="200">
            <div class="card-body">
                <h5 class="card-title">@win.Date</h5>
                <p class="card-text">@win.Description </p>
                <p align="right">
                    <a asp-controller="Wins" asp-action="Delete" asp-route-id="@win.Id" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');">Delete!</a>
                </p>
            </div>
        </div>
    }
</div>

