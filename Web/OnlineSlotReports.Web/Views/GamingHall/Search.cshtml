@model OnlineSlotReports.Web.ViewModels.GamingHallViewModels.SearchHallsViewModel
@{
    ViewData["Title"] = "Search";
}
<h6 align="center" class="align-content-center" >Can search hall by name or town!</h6>
<form asp-controller="GamingHall" asp-action="Search" asp-route-name="@Model.Name" method="get">
    <div class="md-form active-pink-2 mb-3">
        <input asp-for="Name" class="form-control" type="text" placeholder="Search" aria-label="Search">
    </div>
    <div align="center">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>
<div align="center">
    @if (Model.GamingHalls.Count() == 0 && this.TempData["message"] != null)
    {
        <div class="alert alert-warning m-4 col-md-4">
            @this.TempData["Message"]
        </div>
    }
</div>
@foreach (var hall in Model.GamingHalls)
{
    <div class="card m-4">
        <div class="card-header">
            <a asp-controller="GamingHall" asp-action="Index" asp-route-id="@hall.Id">@hall.HallName</a>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <div class="row">
                    <div class="col-md-2">
                        <img src="@hall.ImageUrl" alt="Alternate Text" height="100" />
                    </div>
                    <div class="col-md-10">
                        <p>@hall.ShortDescription</p>
                        <footer class="blockquote-footer"> Address: @hall.Adress<cite title="Source Title"> @hall.Town</cite></footer>
                    </div>
                </div>
            </blockquote>
        </div>
    </div>
}